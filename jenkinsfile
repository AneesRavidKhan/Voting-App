pipeline {

agent any

stages {

    stage ('Unit-Test') {
        steps {
            sh 'mvn test'
        }
    }

    stage ('Publish-Test-Reports') {
        steps {
            junit 'target/surefire-reports/*.xml'
        }
    }

    stage ('Build') {
        steps {
            sh 'mvn package -DskipTests'
        }
    }

}

}